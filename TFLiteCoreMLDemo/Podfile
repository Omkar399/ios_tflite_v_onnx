# Podfile for TFLite + Core ML Demo
platform :ios, '16.0'
use_frameworks!

# Specify the Xcode project location
project 'TFLiteCoreMLDemo/TFLiteCoreMLDemo.xcodeproj'

target 'TFLiteCoreMLDemo' do
  # Low-level Interpreter API (works without model metadata)
  pod 'TensorFlowLiteSwift'
  # Core ML delegate for TensorFlowLiteSwift
  pod 'TensorFlowLiteSwift/CoreML'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
    end
  end
end

